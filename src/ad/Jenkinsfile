pipeline {
    agent any

    tools {
        jdk 'jdk21'
    }

    environment {
        IMAGE_NAME = "krishanu123456/ad-service"
        IMAGE_TAG  = "${BUILD_NUMBER}"
    }

    stages {

        // STAGE 1: Git Checkout
        stage('Git Checkout') {
            steps {
                git branch: 'main',
                    credentialsId: 'git-cred',
                    url: 'https://github.com/krishanudas0100/ultimate-devops-project-demo.git'
            }
        }

        // STAGE 2: Auto-Fix build.gradle (removes duplicate plugins block)
        stage('Fix build.gradle') {
            steps {
                sh '''
                    FILE="src/ad/build.gradle"
                    echo "=== Checking for duplicate plugins {} blocks ==="
                    grep -n "^plugins {" "$FILE"

                    COUNT=$(grep -c "^plugins {" "$FILE" || true)
                    echo "Total plugins { blocks found: $COUNT"

                    if [ "$COUNT" -gt "1" ]; then
                        echo "=== Removing duplicate plugins block ==="

                        # Get ONLY the line number of the second plugins { block
                        SECOND=$(grep -n "^plugins {" "$FILE" | sed -n "2p" | cut -d: -f1)
                        echo "Second plugins block starts at line: $SECOND"

                        # Find closing } of that block
                        END=$(tail -n +"$SECOND" "$FILE" | grep -n "^}" | head -1 | cut -d: -f1)
                        END=$((SECOND + END - 1))
                        echo "Second plugins block ends at line: $END"

                        # Delete the duplicate block
                        sed -i "${SECOND},${END}d" "$FILE"

                        echo "=== Done. Remaining plugins blocks: ==="
                        grep -n "^plugins {" "$FILE"
                    else
                        echo "=== No duplicate found. build.gradle is clean ==="
                    fi

                    echo "=== Final top 20 lines of build.gradle ==="
                    head -20 "$FILE"
                '''
            }
        }

        // STAGE 3: Build Ad Service
        stage('Build Ad Service') {
            steps {
                dir('src/ad') {
                    sh 'chmod +x gradlew'
                    sh './gradlew clean build -x verifyGoogleJavaFormat'
                }
            }
        }

        // STAGE 4: Trivy File Scan
        stage('Trivy File Scan') {
            steps {
                sh 'trivy fs --exit-code 0 --severity HIGH,CRITICAL --format table .'
            }
        }

        // STAGE 5: SonarQube Analysis (sonar-scanner CLI - no build.gradle changes needed)
        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('sonarqube') {
                    withCredentials([string(credentialsId: 'sonar-token', variable: 'SONAR_TOKEN')]) {
                        sh '''
                            sonar-scanner \
                                -Dsonar.projectKey=ad-service \
                                -Dsonar.projectName=ad-service \
                                -Dsonar.sources=src/ad/src/main/java \
                                -Dsonar.java.binaries=src/ad/build/classes \
                                -Dsonar.login=$SONAR_TOKEN
                        '''
                    }
                }
            }
        }

        // STAGE 6: Quality Gate
        stage('Quality Gate') {
            steps {
                timeout(time: 5, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }

        // STAGE 7: Build Docker Image
        stage('Build Docker Image') {
            steps {
                dir('src/ad') {
                    script {
                        withDockerRegistry(credentialsId: 'docker-cred', toolName: 'docker') {
                            sh "docker build -t ${IMAGE_NAME}:${IMAGE_TAG} ."
                        }
                    }
                }
            }
        }

        // STAGE 8: Push Docker Image
        stage('Push Docker Image') {
            steps {
                script {
                    withDockerRegistry(credentialsId: 'docker-cred', toolName: 'docker') {
                        sh "docker push ${IMAGE_NAME}:${IMAGE_TAG}"
                        sh "docker tag  ${IMAGE_NAME}:${IMAGE_TAG} ${IMAGE_NAME}:latest"
                        sh "docker push ${IMAGE_NAME}:latest"
                    }
                }
            }
        }

        // STAGE 9: Update Kubernetes Manifest
        stage('Update Kubernetes Manifest') {
            steps {
                script {
                    withCredentials([gitUsernamePassword(
                        credentialsId: 'git-cred',
                        usernameVariable: 'GIT_USERNAME',
                        passwordVariable: 'GIT_PASSWORD'
                    )]) {
                        sh """
                            sed -i 's|image: .*|image: ${IMAGE_NAME}:${IMAGE_TAG}|g' kubernetes/ad/deploy.yaml
                            git config user.email "krishanudas0100@gmail.com"
                            git config user.name "krishanudas0100"
                            git remote set-url origin https://\${GIT_USERNAME}:\${GIT_PASSWORD}@github.com/krishanudas0100/ultimate-devops-project-demo.git
                            git add kubernetes/ad/deploy.yaml
                            git commit -m "[CI]: Update ad-service image tag to ${IMAGE_TAG}" || echo "No changes to commit"
                            git push origin HEAD:main
                        """
                    }
                }
            }
        }
    }

    post {
        success {
            echo "✅ Pipeline completed successfully! Image: ${IMAGE_NAME}:${IMAGE_TAG}"
        }
        failure {
            echo "❌ Pipeline failed. Check the logs above for details."
        }
        always {
            cleanWs()
        }
    }
}
