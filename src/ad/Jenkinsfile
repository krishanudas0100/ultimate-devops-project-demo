pipeline {
    agent any
    tools {
        jdk 'jdk21'
    }
    environment {
        IMAGE_NAME = "krishanu123456/ad-service"   // ✅ Remove :latest from here
        IMAGE_TAG = "${BUILD_NUMBER}"
    }
    stages {
        stage('Git Checkout') {
            steps {
                git branch: 'main',
                    credentialsId: 'git-cred',
                    url: 'https://github.com/krishanudas0100/ultimate-devops-project-demo.git'
            }
        }
        stage('Build Ad Service') {
            steps {
                dir('src/ad') {
                    sh 'chmod +x gradlew'
                    sh './gradlew clean build -x verifyGoogleJavaFormat'
                }
            }
        }
        stage('Trivy File Scan') {
            steps {
                sh 'trivy fs .'
            }
        }
        stage('Build Docker Image') {
            steps {
                dir('src/ad') {
                    script {
                        withDockerRegistry(credentialsId: 'docker-cred', toolName: 'docker') {
                            sh "docker build -t ${IMAGE_NAME}:${IMAGE_TAG} ."  // ✅ krishanu12/ad-service:9
                        }
                    }
                }
            }
        }
        stage('Push Docker Image') {
            steps {
                script {
                    withDockerRegistry(credentialsId: 'docker-cred', toolName: 'docker') {
                        sh "docker push ${IMAGE_NAME}:${IMAGE_TAG}"            // ✅ krishanu12/ad-service:9
                        sh "docker tag ${IMAGE_NAME}:${IMAGE_TAG} ${IMAGE_NAME}:latest"
                        sh "docker push ${IMAGE_NAME}:latest"                  // ✅ also push latest
                    }
                }
            }
        }
        stage('Update Kubernetes Manifest') {
            steps {
                script {
                    withCredentials([gitUsernamePassword(credentialsId: 'git-cred', gitToolName: 'Default')]) {
                        sh """
                            # Update the image tag in the deployment manifest
                            sed -i "s|image: .*|image: ${IMAGE_NAME}:${IMAGE_TAG}|" kubernetes/ad/deploy.yaml

                            # Commit and push back to GitHub
                            git config --global user.email "krishanudas0100@gmail.com"
                            git config --global user.name "Krishanu Das"
                            git add kubernetes/ad/deploy.yaml
                            git commit -m "[CI]: Update ad-service image tag to ${IMAGE_TAG}"
                            git push origin HEAD:main -f
                        """
                    }
                }
            }
        }
        stage('Deploy To Kubernetes') {
            steps {
                withKubeConfig(
                    credentialsId: 'k8-cred',
                    namespace: 'webapps'
                ) {
                    sh 'kubectl apply -f kubernetes/ad/deploy.yaml'
                }
            }
        }
    }
}
